# GhostWire Refractory - Environment Configuration Sample

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Database Configuration
DB_PATH=memory.db
DB_POOL_SIZE=5
DB_POOL_OVERFLOW=10

# Vector Configuration
EMBED_DIM=768
HNSW_MAX_ELEMENTS=100000
HNSW_EF_CONSTRUCTION=200
HNSW_M=16
HNSW_EF=50

# Ollama Configuration
LOCAL_OLLAMA_URL=http://localhost:11434
REMOTE_OLLAMA_URL=http://100.103.237.60:11434
DEFAULT_OLLAMA_MODEL=gemma3:1b
REMOTE_OLLAMA_MODEL=gemma3:12b
OLLAMA_URL=http://localhost:11434

# Additional Models (comma-separated)
EMBED_MODELS=embeddinggemma,granite-embedding,nomic-embed-text,mxbai-embed-large,snowflake-arctic-embed,all-minilm
NON_EMBED_MODELS=gemma3:1b,gemma3n:e4b,llama3.2,gemma3,qwen3

# Summarization Configuration
SUMMARY_MODEL=gemma3:1b
DISABLE_SUMMARIZATION=false

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Security Configuration
SECRET_KEY=your-super-secret-key-here-replace-with-secure-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=ghostwire.log

